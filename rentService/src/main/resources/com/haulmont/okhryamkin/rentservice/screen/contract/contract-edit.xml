<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://contractEdit.caption"
        focusComponent="form">
    <data>
        <instance id="contractDc"
                  class="com.haulmont.okhryamkin.rentservice.entity.Contract">
            <fetchPlan extends="_base">
                <property name="client" fetchPlan="_base"/>
                <property name="outlet" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="contractDc">
            <column width="350px">
                <entityPicker id="clientField" property="client"
                              caption="&#1050;&#1086;&#1084;&#1087;&#1072;&#1085;&#1080;&#1103;">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <dateField
                        caption="&#1044;&#1072;&#1090;&#1072; &#1085;&#1072;&#1095;&#1072;&#1083;&#1072; &#1072;&#1088;&#1077;&#1085;&#1076;&#1099;"
                        id="dateOfStartField" property="dateOfStart" required="true"/>
                <dateField id="dateOfEndField"
                           caption="&#1044;&#1072;&#1090;&#1072; &#1086;&#1082;&#1086;&#1085;&#1095;&#1072;&#1085;&#1080;&#1103; &#1072;&#1088;&#1077;&#1085;&#1076;&#1099;"
                           property="dateOfEnd" required="true"/>
                <entityPicker id="outletField" property="outlet"
                              caption="&#1058;&#1086;&#1088;&#1075;&#1086;&#1074;&#1072;&#1103; &#1090;&#1086;&#1095;&#1082;&#1072;">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <label value="&#1048;&#1090;&#1086;&#1075;:"/>
                <label id="cost"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"
                    caption="&#1055;&#1086;&#1076;&#1090;&#1074;&#1077;&#1088;&#1076;&#1080;&#1090;&#1100;"/>
            <button id="closeBtn" action="windowClose" caption="&#1054;&#1090;&#1084;&#1077;&#1085;&#1072;"/>
        </hbox>
    </layout>
</window>
