<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="rentService">
        <createTable tableName="CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLIENT"/>
            </column>
            <column name="COMPANY_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="OWNER_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="OWNER_MIDDLENAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="OWNER_SURNAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(255)"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="rentService" dbms="postgresql">
        <createIndex indexName="IDX_UC_CLIENT_COMPANY_NAME" tableName="CLIENT" unique="true">
            <column name="COMPANY_NAME"/>
        </createIndex>

        <modifySql>
            <append value="where DELETED_DATE is null"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>